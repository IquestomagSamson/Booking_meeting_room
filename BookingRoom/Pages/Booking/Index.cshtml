@page
@model BookingRoom.Pages.Booking.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].booking_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].start_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].end_time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].participants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].room_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].users_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bookings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.booking_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.participants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.users_id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Booking_id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Booking_id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Booking_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
